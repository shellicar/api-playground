{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "ignoreExportsUsedInFile": {
    "interface": true,
    "type": true
  },
  "tags": ["-lintignore"],
  "workspaces": {
    "apps/apollo-graphql": {
      "entry": ["src/functions/*.ts", "build.ts", "validate-schema.ts"],
      "project": ["src/**/*.ts"],
      "ignore": ["src/generated/**"]
    },
    "apps/trpc": {
      "entry": ["src/functions/*.ts", "build.ts"],
      "project": ["src/**/*.ts"]
    },
    "packages/typescript-config": {
      "entry": [],
      "ignore": ["**"]
    }
  }
}
